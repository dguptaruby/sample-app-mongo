<h1>Listing people</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Title</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Company</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>Postal code</th>
    <th>State</th>
    <th>Country</th>
    <th>Work phone</th>
    <th>Mobile phone</th>
    <th>Home phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.person_id %></td>
    <td><%= person.title %></td>
    <td><%= person.first_name %></td>
    <td><%= person.last_name %></td>
    <td><%= person.company %></td>
    <td><%= person.address1 %></td>
    <td><%= person.address2 %></td>
    <td><%= person.city %></td>
    <td><%= person.postal_code %></td>
    <td><%= person.state %></td>
    <td><%= person.country %></td>
    <td><%= person.work_phone %></td>
    <td><%= person.mobile_phone %></td>
    <td><%= person.home_phone %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

